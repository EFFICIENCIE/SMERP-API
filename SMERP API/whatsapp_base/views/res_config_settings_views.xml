<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.base</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="95"/>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='invite_users']" position="inside">
                <h2>Whatsapp Api</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <div>
                                <label string="Api Url" for="api_url"/>
                                <div class="content-group">
                                    <field name="api_url" colspan="4" nolabel="1"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <div>
                                <label string="Api Token" for="api_url"/>
                                <div class="content-group">
                                    <field name="api_token" colspan="4" nolabel="1"/>
                                </div>
                            </div>
                        </div>
                    </div>
                     <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <div>
                                <label for="api_instance_id"/>
                                <div class="content-group">
                                    <field name="api_instance_id" colspan="4" nolabel="1"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>